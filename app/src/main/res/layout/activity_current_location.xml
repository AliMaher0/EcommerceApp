<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.CurrentLocationActivity"
    android:background="@drawable/bggg">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/location_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:title="Get Location"
        app:titleTextColor="@color/pink"/>

    <TextView
        android:id="@+id/location_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginVertical="60dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="15dp"
        android:fontFamily="@font/amethysta"
        android:gravity="center_horizontal"
        android:text="Current Location"
        android:textColor="@color/pink"
        android:textSize="35sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/address_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/location_label"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        android:text="Address : "
        android:textColor="#88dff7"
        android:textSize="20dp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="City : "
        android:layout_below="@+id/address_label"
        android:layout_marginTop="20dp"
        android:textSize="20dp"
        android:textColor="#88dff7"
        android:textStyle="bold"
        android:layout_marginStart="10dp"
        android:id="@+id/city_label" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Country : "
        android:layout_below="@+id/city_label"
        android:layout_marginTop="20dp"
        android:textSize="20dp"
        android:textColor="#88dff7"
        android:textStyle="bold"
        android:layout_marginStart="10dp"
        android:id="@+id/country_label" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Latitude : "
        android:layout_below="@+id/country_label"
        android:layout_marginTop="20dp"
        android:textSize="20dp"
        android:textColor="#88dff7"
        android:textStyle="bold"
        android:layout_marginStart="10dp"
        android:id="@+id/latitude_label" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Longitude : "
        android:layout_below="@+id/latitude_label"
        android:layout_marginTop="20dp"
        android:textSize="20dp"
        android:textColor="#88dff7"
        android:textStyle="bold"
        android:layout_marginStart="10dp"
        android:id="@+id/longitude_label" />


    <Button
        android:id="@+id/get_location_btn"
        android:layout_width="167dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="119dp"
        android:layout_marginBottom="184dp"
        android:backgroundTint="@color/pink"
        android:text="Get Location"
        android:textColor="@color/white"
        android:textSize="15sp" />


</RelativeLayout>